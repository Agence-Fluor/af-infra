server {
    listen       80;
    server_name  _;

    error_page 404 /index.html;
    
    location / {
        set $root_dir /usr/share/nginx/maintenance;

        if ($arg_secret = "pomme") {
            set $root_dir /usr/share/nginx/app;
        }

        root $root_dir;
        index index.html;
        try_files $uri $uri/ /index.html =404;
    }

}
