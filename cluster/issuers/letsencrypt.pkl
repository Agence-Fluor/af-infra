
apiVersion = "cert-manager.io/v1"
kind       = "ClusterIssuer"
metadata {
    name = "letsencrypt-issuer"
}
spec {
    acme {
        email = "contact@agence-fluor.fr"

        server = "https://acme-v02.api.letsencrypt.org/directory" 

        privateKeySecretRef {
            name = "letsencrypt-account-key"
        }

        solvers {
            new {
                http01 {
                    ingress {
                        ["class"] = "nginx"
                    }
                }
            }
        }
    }
}
