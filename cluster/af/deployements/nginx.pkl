amends "@k8s/api/apps/v1/Deployment.pkl"

import "../../../Settings.pkl" as Settings

metadata {
  name = "nginx"
}

spec {
  replicas = 2
  selector {
    matchLabels {
      ["app"] = "nginx"
    }
  }
  template {
    metadata {
      labels {
        ["app"] = "nginx"
      }
    }
    spec {
      containers {
        new {
          name  = "nginx"
          image = "nginx:latest"
          ports {
            new {
              containerPort = 80
            }
          }
          volumeMounts {
            new {
              name      = "af-storage"
              mountPath = "/etc/nginx/conf.d"
              subPath   = "af/nginx/config"

            }
            new {
              name      = "af-storage"
              mountPath = "/var/log/nginx"
              subPath   = "af/nginx/logs"
            }
            new {
              name      = "af-storage"
              mountPath = "/usr/share/nginx/html"
              subPath   = "af/nginx/public"
            }
          }
        }
      }
      volumes {
        new {
          name = "af-storage"
          persistentVolumeClaim {
            claimName = "af-pvc"
          }
        }      
      }
    }
  }
}
