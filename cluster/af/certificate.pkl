import "../../Settings.pkl" as Settings

apiVersion = "cert-manager.io/v1"
kind = "Certificate"
metadata {
  name = "af-cert"
  namespace = "default"
}
spec {
  secretName = "af-tls"
  duration = "2160h"
  renewBefore = "360h"
  commonName = Settings.ingress["af"].domain
  dnsNames {
     Settings.ingress["af"].domain
  }
  issuerRef {
    when (Settings.ingress["af"].tls.selfSigned)
    {
        name = "selfsigned-issuer"
    }
    else
    {
        name = "letsencrypt-issuer"
    }
    kind = "ClusterIssuer"
  }
}
